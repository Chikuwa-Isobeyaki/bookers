  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr> 
    </tbody>
    <% end %> 
  </table>
  
  <h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: Book.new,url: books_path, method: :post do |f| %>/
 <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
 </div>
	
  <%= f.submit 'Create Book' %>
<% end %>



</body>
</html>

